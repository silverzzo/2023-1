
/* 1장 실습문제 3번*/
#include<iostream>

int main() {
    int sum = 0;
    for (int i = 1; i < 11; i++) {
        sum += i;
    }
    std::cout << "1에서 10까지 더한 값은 " << sum << " 입니다.";
}


/* 1장 실습문제 3번 변형*/
#include<iostream>

int main() {
    int x = 0;
    std::cout << "임의의 정수값 입력\n";
    std::cin >> x;

    int sum = 0;
    for (int i = 1; i < x+1; i++) {
        sum+=i;
    }
    std::cout << "1에서"<<x<<"까지 더한 값은 " << sum << " 입니다.";
}

/* 2장 실습문제 2번*/
#include<iostream>

int main() {
    for (int x = 1; x < 10; x++) {
        for (int y = 1; y < 10; y++) {
            std::cout << x << "X" << y << "=" << x * y << "\t";
        }
        std::cout << std::endl;
    }
}


/* 2장 예제 3번*/
#include <iostream>
using namespace std;

int main() {

	cout << "너비를 입력하세요>>"; //너비를 입력하세요>> 출력

	int width; //
	cin >> width; //키보드로부터 정수 값 너비를 읽어 width 변수에 저장

	cout << "높이를 입력하세요>>";  //높이를 입력하세요>> 출력

	int height;
	cin >> height; //키보드로부터 정수 값 높이를 읽어 height 변수에 저장

	int area = width * height; //사각형 면적 계산
	cout << "면적은" << area << endl;  // 면적을 출력하고 다음줄로 넘어감

}
