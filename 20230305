/*ex) 2-1*/

#include <iostream>   //input, output --> io 입출력 관련 cout, cin

int main() {
	std::cout << "hello\n"; //화면에 hello출력하고 다음줄로 넘어감
	std::cout << "hello" << std::endl; //위 출력과 동일한 기능을 한다.
	std::cout << "첫 번째 맛보기 입니다."; //화면에 첫 번째 맛보기 입니다. 출력
	return 0; //main() 함수가 종료되면 프로그램 종료됨
}
//hello
//첫 번째 맛보기 입니다.


/*ex) 2-2 cout과 <<를 이용한 화면 출력*/

#include<iostream>

double area(int r);//함수의 원형 선언

double area(int r) { //함수구현
	return 3.14 * r * r; //반지름 r의 원 면적 리턴
}

int main() {
	int n = 3;
	char c = '#';
	std::cout << c << 5.5 << '-' << n << "hello" << true <<std::endl;
	std::cout << "n+5=" << n + 5 << "\n";
	std::cout << "면적은 " << area(n); // 함수area(n)의 리턴 값 출력
}
//#5.5-3hello1
//n+5=8
//면적은 28.26
